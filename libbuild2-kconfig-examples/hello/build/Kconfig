config HELLO__FOO
	bool "Foo support"
	help
	  This enables compilation of foo. It is an example of a random
	  component of a project.

config BAR
	bool "Bar support"
	help
	  This enables compilation of the feature bar.

config BAZ
	bool "Baz support"
	depends on BAR
	help
	  This enables baz. It demos dependency annotations.

config ALPHA
	bool "Alpha support"
	help
	  This enables alpha. An example directory depenency.

menu "Values"

config INT
	int "Integer value"
	help
	  This is some integer value.

config HEX
	hex "Hex value"
	help
	  This is some hex value.

config STR
	string "String value"
	help
          This is some string value.

config STR_HELPER
	string
	default "foobar" if ALPHA

endmenu

# Choice.
#
config HAVE_COMPRESSION
	bool

choice COMPRESSION_CHOICE
	prompt "Compression tool"
	optional

config GZIP
	bool "Use gzip"
	select HAVE_COMPRESSION

config BZIP2
	bool "use bzip2"
	select HAVE_COMPRESSION

endchoice

# Comment.
#
comment "Using gzip"
	depends on GZIP

comment "Using bzip2"
	depends on BZIP2
